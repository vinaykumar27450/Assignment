@model ViewModels.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list = new SelectList(new[]
        {
        new {ID="1", Name="Male"},
        new {ID="2", Name="Female"}
    },
        "Name", "Name", 1);
}

<h2>Edit User Details</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @*@Html.ValidationSummary()*@
    <div class="container">
        @*<div class="col-sm-8">*@
        <div class="form-group">
            @Html.HiddenFor(model => model.UserId)
            <div class="col-md-3 text-right">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            </div>
            <div class="col-md-9 input-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "alert" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 text-right">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            </div>
            <div class="col-md-9 input-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "alert" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 text-right">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-9 input-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "alert" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 text-right">
                @Html.LabelFor(m => m.Gender, new { @class = "control-label" })
            </div>
            <div class="col-md-9 input-group">
                @Html.DropDownListFor(m => m.Gender, list, "Select Gender", new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "alert" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 text-right">
                <label class="control-label">Interest</label>
            </div>
            <div class="col-md-9 input-group">
                <label class="control-label">
                    @Html.CheckBoxFor(m => m.IsInterestedInCSharp)
                    CSharp
                </label>
                <label class="control-label">
                    @Html.CheckBoxFor(m => m.IsInterestedInJava)
                    Java
                </label>
                <label class="control-label">
                    @Html.CheckBoxFor(m => m.IsInterestedInPython)
                    Python
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 text-right">
                @Html.LabelFor(m => m.CityId, new { @class = "control-label" })
            </div>
            <div class="col-md-9 input-group">
                @Html.DropDownListFor(m => m.CityId, new SelectList(ViewBag.cities, "CityId", "CityName"), "Select City", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CityId, "", new { @class = "alert" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 text-right">
                <label class="control-label">DOB</label>
            </div>
            <div class="col-md-9 input-group">
                @*@Html.TextBoxFor(m => m.DOB, new { @class = "form-control " })*@
                @Html.EditorFor(x => x.DOB, new { htmlAttributes = new { @max = DateTime.Today.ToString("yyyy-MM-dd"), @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "alert" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </div>
        @*</div>*@
    </div>
}


